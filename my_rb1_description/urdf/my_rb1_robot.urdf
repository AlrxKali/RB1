<?xml version="1.0"?> 
<robot name="rb1_robot" xmlns:xacro="http://www.ros.org/wiki/xacro" xmlns:gazebo="http://gazebosim.org/schema/gazebo_ros_plugin">

    <!-- Material Definitions --> 
    <material name="grey"> 
        <color rgba="0.5 0.5 0.5 1.0"/> 
    </material> 

    <material name="black">
        <color rgba="0.0 0.0 0.0 0.5"/> 
    </material> 

    <material name="blue"> 
        <color rgba="0 0 1 0.8"/> 
    </material> 
    
    <!-- Base Footprint --> 
    <link name="base_footprint">
        <visual> 
            <geometry> 
                <box size="0.01 0.01 0.01"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
            <material name="grey"/> 
        </visual> 
        <collision> 
            <geometry> 
                <box size="0.01 0.01 0.01"/>
            </geometry> 
            <origin xyz="0 0 0"/> 
        </collision> 
    </link> 
    
    <!-- Base Link --> 
    <link name="base_link"> 
        <inertial> 
            <origin xyz="0 0 0"/> 
            <mass value="25.0"/> 
            <inertia ixx="0.53125" ixy="0.0" ixz="0.0" iyy="0.53125" iyz="0.0" izz="0.71875"/> 
        </inertial> 
        <visual> 
            <geometry> 
                <cylinder radius="0.25" length="0.3"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
            <material name="black"/> 
        </visual> 
        <collision> 
            <geometry> 
                <cylinder radius="0.25" length="0.3"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
        </collision> 
    </link> 
    
    <!-- Joint between base_footprint and base_link --> 
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/> 
        <child link="base_link"/> 
        <origin xyz="0 0 0.175" rpy="0 0 0"/> <!-- Elevated to ensure wheels touch the ground -->
    </joint> 
    
    <!-- Left Wheel --> 
    <link name="left_wheel">
        <inertial> 
            <origin xyz="0 0 0"/> 
            <mass value="1.0"/> 
            <inertia ixx="0.000189583" ixy="0.0" ixz="0.0" iyy="0.0003125" iyz="0.0" izz="0.0003125"/> 
        </inertial> 
        <visual> 
            <geometry> 
                <cylinder radius="0.025" length="0.02"/> 
            </geometry> 
            <origin xyz="0 0 0" rpy="1.5708 0 0"/> <!-- Rotated 90 degrees around X-axis -->
            <material name="grey"/> 
        </visual> 
        <collision> 
            <geometry> 
                <cylinder radius="0.025" length="0.02"/> 
            </geometry> 
            <origin xyz="0 0 0" rpy="1.5708 0 0"/> <!-- Rotated 90 degrees around X-axis -->
        </collision> 
    </link> 

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/> 
        <child link="left_wheel"/> 
        <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/> <!-- Adjusted Z to ensure contact -->
        <axis xyz="0 -1 0"/> 
        <dynamics friction="0"/> 
    </joint> 
    
    <!-- Right Wheel --> 
    <link name="right_wheel"> 
        <inertial> 
            <origin xyz="0 0 0"/> 
            <mass value="1.0"/> 
            <inertia ixx="0.000189583" ixy="0.0" ixz="0.0" iyy="0.0003125" iyz="0.0" izz="0.0003125"/> 
        </inertial> 
        <visual> 
            <geometry> 
                <cylinder radius="0.025" length="0.02"/> 
            </geometry> 
            <origin xyz="0 0 0" rpy="1.5708 0 0"/> <!-- Rotated 90 degrees around X-axis -->
            <material name="grey"/> 
        </visual> 
        <collision> 
            <geometry> 
                <cylinder radius="0.025" length="0.02"/> 
            </geometry> 
            <origin xyz="0 0 0" rpy="1.5708 0 0"/> <!-- Rotated 90 degrees around X-axis -->
        </collision> 
    </link> 

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/> 
        <child link="right_wheel"/> 
        <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/> <!-- Adjusted Z to ensure contact -->
        <axis xyz="0 1 0"/> 
        <dynamics friction="0"/> 
    </joint> 
    
    <!-- Front Caster --> 
    <link name="front_caster"> 
        <inertial> 
            <origin xyz="0 0 0"/> 
            <mass value="0.5"/> 
            <inertia ixx="0.000125" ixy="0.0" ixz="0.0" iyy="0.000125" iyz="0.0" izz="0.000125"/> 
        </inertial> 
        <visual> 
            <geometry> 
                <sphere radius="0.025"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
            <material name="grey"/> 
        </visual> 
        <collision> 
            <geometry> 
                <sphere radius="0.025"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
        </collision> 
    </link> 

    <joint name="front_caster_joint" type="fixed"> 
        <parent link="base_link"/> 
        <child link="front_caster"/> 
        <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/> <!-- Adjusted Z to ensure contact -->
    </joint> 
    
    <!-- Back Caster --> 
    <link name="back_caster"> 
        <inertial> 
            <origin xyz="0 0 0"/> 
            <mass value="0.5"/> 
            <inertia ixx="0.000125" ixy="0.0" ixz="0.0" iyy="0.000125" iyz="0.0" izz="0.000125"/> 
        </inertial> 
        <visual> 
            <geometry> 
                <sphere radius="0.025"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
            <material name="grey"/> 
        </visual> 
        <collision> 
            <geometry> 
                <sphere radius="0.025"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
        </collision> 
    </link> 

    <joint name="back_caster_joint" type="fixed"> 
        <parent link="base_link"/> 
        <child link="back_caster"/> 
        <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/> <!-- Adjusted Z to ensure contact -->
    </joint> 
    
    <!-- Front Laser --> 
    <link name="front_laser"> 
        <inertial> 
            <origin xyz="0 0 0"/> 
            <mass value="0.5"/> 
            <inertia ixx="0.000104167" ixy="0.0" ixz="0.0" iyy="0.000104167" iyz="0.0" izz="0.000166667"/> 
        </inertial> 
        <visual> 
            <geometry> 
                <box size="0.05 0.05 0.1"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
            <material name="grey"/> 
        </visual> 
        <collision> 
            <geometry> 
                <box size="0.05 0.05 0.1"/> 
            </geometry> 
            <origin xyz="0 0 0"/> 
        </collision> 
    </link> 

    <joint name="front_laser_joint" type="fixed"> 
        <parent link="base_link"/> 
        <child link="front_laser"/> 
        <origin xyz="0.25 0.0 0.075" rpy="3.1416 0 0"/> 
    </joint> 

    <!-- Gazebo Material and Friction Parameters --> 
    <gazebo reference="base_link"> 
        <material>Gazebo/Black</material> 
    </gazebo> 

    <gazebo reference="left_wheel"> 
        <material>Gazebo/Grey</material>
        <friction> 
            <ode> 
                <mu>1.0</mu> 
                <mu2>1.0</mu2> 
            </ode>
        </friction> 
    </gazebo> 

    <gazebo reference="right_wheel"> 
        <material>Gazebo/Grey</material>
        <friction> 
            <ode> 
                <mu>1.0</mu> 
                <mu2>1.0</mu2> 
            </ode>
        </friction> 
    </gazebo> 

    <gazebo reference="front_caster"> 
        <material>Gazebo/Grey</material> 
        <friction> 
            <ode> 
                <mu>1.0</mu> 
                <mu2>1.0</mu2> 
            </ode>
        </friction> 
    </gazebo> 

    <gazebo reference="back_caster"> 
        <material>Gazebo/Grey</material> 
        <friction> 
            <ode> 
                <mu>1.0</mu> 
                <mu2>1.0</mu2> 
            </ode>
        </friction> 
    </gazebo> 

    <gazebo reference="front_laser"> 
        <material>Gazebo/Grey</material> 
    </gazebo>

    <!-- Gazebo Plugins -->
    <gazebo>
        <!-- Differential Drive Plugin -->
        <plugin name="diff_drive_plugin" filename="libgazebo_ros_diff_drive.so">
            <!-- Joint names -->
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            <!-- Wheel parameters -->
            <wheel_separation>0.4</wheel_separation>
            <wheel_radius>0.025</wheel_radius>
            <cmd_vel_topic>/cmd_vel</cmd_vel_topic>
            <odom_topic>/odom</odom_topic>
            <publish_tf>true</publish_tf>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>
        </plugin>
    </gazebo>

</robot>
